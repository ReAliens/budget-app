  <%= render 'shared/header',title:'Categories',image:'back.svg',target_link: categories_path%>

  <div class="flex flex-col w-screen h-full ">
      <%= form_with model: @category, method: :post, local: true do |f| %>
      <div class="h-2/4 justify-center items-center mt-32">
          <div class="flex flex-col text-main-300 px-4">
              <%= f.label :Name%>
              <%= f.text_field :name, required: true, placeholder: "Category Name" %>
          </div>
          <div class="flex flex-col text-main-300 px-4 mt-11">
              <%= f.label :Icon%>
              <%= f.text_field :icon, required: true, placeholder: "Category Icon"%>
          </div>
      </div>
      <div class="w-screen flex justify-center fixed bottom-0 bg-main-200 p-4 hover:cursor-pointer">
          <div
              class="h-20 flex justify-center items-center p-4  bg-main-200 text-white w-fit text-3xl border-2 border-white">
              <%= f.submit "Add Category" %>
          </div>
      </div>
      <% end %>
  </div>