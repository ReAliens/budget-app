<div class="bg-white w-full p-3 my-2">
    <div class="grid grid-cols-4 gap-6 border-b-2 border-slate-200 pb-4">
        <div class="w-full col-span-1 h-[100px] flex items-center object-cover">
            <%= image_tag payment.category.icon %>
        </div>
        <div class="col-span-3 h-full items-center text-3xl text-main-300 flex py-5">
            <p><%=payment.name%></p>
        </div>
    </div>
    <div class="flex flex-col py-5 text-main-300 border-b-2 border-slate-200 ">
        <p>Created By: <%= payment.user.name%> </p>
        <p>Created at: <%= payment.created_at%> </p>
    </div>
    <div class="flex w-full justify-between px-2 text-main-300 py-5 text-3xl">
        <span>Total Payment</span>
        <span>$ <%= payment.amount%></span>
    </div>
</div>